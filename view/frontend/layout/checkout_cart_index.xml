<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<body>
    	<referenceContainer name="additional.product.info">
       		 <block class="Magento\Framework\View\Element\Template" name="minicart.refresh" template="Sapient_Worldpay::checkout/cart/minicartrefresh.phtml"/>
   	</referenceContainer>
         <referenceContainer name="checkout.cart.methods">
            <block class="Sapient\Worldpay\Block\Checkout\Onepage\Chromepay" name="checkout.cart.methods.onepage" after = "checkout.cart.methods.onepage.bottom" template="Sapient_Worldpay::onepage/link.phtml"/>
         </referenceContainer>
	</body>
</page>