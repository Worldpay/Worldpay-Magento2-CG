<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">catalog_product_recurring_plan_add_form.catalog_product_recurring_plan_add_form_data_source</item>
            <item name="deps" xsi:type="string">catalog_product_recurring_plan_add_form.catalog_product_recurring_plan_add_form_data_source</item>
        </item>
        <item name="buttons" xsi:type="array">
            <item name="cancel" xsi:type="string" translate="true">Sapient\Worldpay\Block\Adminhtml\Catalog\Product\Recurring\Plan\Button\Cancel</item>
            <item name="save" xsi:type="string" translate="true">Sapient\Worldpay\Block\Adminhtml\Catalog\Product\Recurring\Plan\Button\Save</item>
        </item>
        <item name="label" xsi:type="string" translate="true">New Payment Plan</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">catalog_product_recurring_plan_add_form</item>
            <item name="ajaxSave" xsi:type="boolean">true</item>
            <item name="ajaxSaveType" xsi:type="string">simple</item>
            <item name="component" xsi:type="string">Sapient_Worldpay/js/components/new-recurring-plan-form</item>
        </item>
        <item name="childrenFromMeta" xsi:type="boolean">true</item>
    </argument>
    <dataSource name="catalog_product_recurring_plan_add_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Sapient\Worldpay\Model\Recurring\Plan\DataProvider</argument>
            <argument name="name" xsi:type="string">catalog_product_recurring_plan_add_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">plan_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="worldpay/recurring_plan/save"/>
                    <item name="validate_url" xsi:type="url" path="worldpay/recurring_plan/validate"/>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <fieldset name="base_fieldset">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true"></item>
                <item name="collapsible" xsi:type="boolean">false</item>
                <item name="sortOrder" xsi:type="number">10</item>
            </item>
        </argument>
        <field name="active">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magento\Config\Model\Config\Source\Yesno</item>
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">10</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="number">1</item>
                        <item name="false" xsi:type="number">0</item>
                    </item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="label" xsi:type="string" translate="true">Active</item>
                    <item name="default" xsi:type="number">0</item>
                    <item name="source" xsi:type="string">worldpay_recurring_plan</item>
                </item>
            </argument>
        </field>
        <field name="code">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">20</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="label" xsi:type="string" translate="true">Code</item>
                    <item name="notice" xsi:type="string" translate="true">A prefix (Product ID with "_") will be addded with this code, total length cannot exceed 25 characters.</item>
                    <item name="source" xsi:type="string">worldpay_recurring_plan</item>
                    <item name="required" xsi:type="boolean">true</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="description">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">40</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="label" xsi:type="string" translate="true">Description</item>
                    <item name="notice" xsi:type="string" translate="true">Maximum 100 chars.</item>
                    <item name="source" xsi:type="string">worldpay_recurring_plan</item>
                    <item name="validation" xsi:type="array">
                        <item name="max_text_length" xsi:type="number">100</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="interval">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Sapient\Worldpay\Model\Config\Source\Interval</item>
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">50</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Recurring Cycle</item>
                    <item name="notice" xsi:type="string" translate="true">Below the Recurring cycle drop down, add a meesage - Frequency of orders to be fulfilled</item>
                    <item name="source" xsi:type="string">worldpay_recurring_plan</item>
                    <item name="required" xsi:type="boolean">true</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="interval_amount">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">60</item>
                    <item name="dataType" xsi:type="string">number</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="label" xsi:type="string" translate="true">Recurring Amount</item>
                    <item name="notice" xsi:type="string" translate="true">Below the Recurring amount drop down, add a meesage - Amount to be paid for subscription order</item>
                    <item name="source" xsi:type="string">worldpay_recurring_plan</item>
                    <item name="required" xsi:type="boolean">true</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                        <item name="validate-zero-or-greater" xsi:type="boolean">true</item>
                        <item name="less-than-equals-to" xsi:type="number">9999999999.99</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="website_id">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Sapient\Worldpay\Model\Config\Source\Website</item>
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">100</item>
                    <item name="dataType" xsi:type="string">number</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Website</item>
                    <item name="source" xsi:type="string">worldpay_recurring_plan</item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>
